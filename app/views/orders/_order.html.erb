<!-- app/views/orders/_order.html.erb -->
<div id="<%= dom_id order %>">
  <% order.order_items.each do |item| %>
    <p>
      <strong>Product:</strong>
      <%= item.product.name %>
    </p>
    <p>
      <strong>Quantity:</strong>
      <%= item.quantity %>
    </p>
    <!-- Include other item details as needed -->
  <% end %>
  <p>
    <%= link_to "Show this order", order_path(order) %>
  </p>
</div>
